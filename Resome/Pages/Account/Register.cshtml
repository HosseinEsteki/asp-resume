@page "/register"
@model Resome.Pages.Auth.RegisterModel
@{
}
<!--register-->
<section class="section pt-55 mb-50">
	<div class="container-fluid">
		<div class="sign widget">
			<div class="section-title">
				<h5>ساخت حساب</h5>
			</div>

			<form asp-action="Register" class="sign-form widget-form">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<div class="form-group">
					<label asp-for="Register.Email" class="control-label">آدرس ایمیل</label>
					<input asp-for="Register.Email" class="form-control" placeholder="آدرس ایمیل*">
					<span asp-validation-for="Register.Email" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label asp-for="Register.Password" class="control-label">رمز عیور</label>
					<input asp-for="Register.Password" class="form-control" placeholder="رمز عبور*">
					<span asp-validation-for="Register.Password" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Register.RePassword" class="control-label">تکرار رمز عیور</label>
					<input asp-for="Register.RePassword" class="form-control" placeholder="تکرار رمز عبور*">
					<span asp-validation-for="Register.RePassword" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input value="ثبت نام" type="submit" class="btn-custom" />
				</div>
				<p class="form-group text-center">حساب داری؟ <a asp-page="./login" class="btn-link">پس وارد شو</a> </p>
			</form>
		</div>
	</div>
</section>